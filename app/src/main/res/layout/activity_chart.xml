<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1F1D1D"
    tools:context=".ui.ChartActivity">

    <com.github.mikephil.charting.charts.CombinedChart
        android:id="@+id/stockChart"
        android:layout_width="415dp"
        android:layout_height="364dp"
        android:background="#232222"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewTitle" />

    <LinearLayout
        android:id="@+id/timeframeButtons"
        android:layout_width="70dp"
        android:layout_height="234dp"
        android:layout_marginTop="342dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stockChart">

        <Button
            android:id="@+id/button5m"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5m" />

        <Button
            android:id="@+id/button15m"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="15m" />

        <Button
            android:id="@+id/button1h"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1H" />

        <Button
            android:id="@+id/button1d"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1D" />

    </LinearLayout>

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="163dp"
        android:layout_height="42dp"
        android:layout_marginStart="1dp"
        android:text="Symbol (TF)"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/stockChart"
        app:layout_constraintStart_toEndOf="@+id/imageViewLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewLogo"
        android:layout_width="123dp"
        android:layout_height="41dp"
        android:layout_marginEnd="1dp"
        android:scaleType="centerCrop"
        android:scaleX="1"
        android:scaleY="1"
        app:layout_constraintBottom_toTopOf="@+id/stockChart"
        app:layout_constraintEnd_toStartOf="@+id/textViewTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <ImageButton
        android:id="@+id/buttonHome"
        android:layout_width="54dp"
        android:layout_height="42dp"

        android:background="#232222"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/home_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>